            rr:template "patient/identifier/{id}";
            rr:class ncit:C25364;
    ];
    rr:predicateObjectMap [
        rr:predicate roo:P100042;
        rr:objectMap [
            rr:column "id"; 
            rr:datatype xsd:string;
        ];
    ].

